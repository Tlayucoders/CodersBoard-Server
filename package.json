{
  "name": "codersBoard",
  "version": "1.0.0",
  "main": "index.js",
  "author": "esau.opr@gmail.com",
  "license": "MIT",
  "scripts": {
    "start": "npm run babel-node ./index.js",
    "develop": "nodemon --exec npm run babel-node ./index.js",
    "babel-node": "babel-node --ignore='node_modules'",
    "build": "babel . --out-dir dist --ignore node_modules,dist,storage,.git,.gitignore,apidoc,public --source-maps --copy-files",
    "token": "node ./utils/tokenGenerator.js",
    "dbseed": "npm run babel-node ./database/seeds/databaseSeeder.js",
    "docs": "apidoc -i ./app/http/controllers -o ./apidoc/"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "dependencies": {
    "ajv": "^4.11.5",
    "cross-env": "^3.2.4",
    "dotenv": "^4.0.0",
    "jsonwebtoken": "^7.3.0",
    "kcors": "2",
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.1.0",
    "koa-ejs": "^4.0.0",
    "koa-jwt": "^3.0.0",
    "koa-router": "next",
    "koa-static": "^3.0.0",
    "mongorito": "^2.2.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "apidoc": "^0.17.5",
    "babel-cli": "^6.24.0",
    "babel-eslint": "6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.2.2",
    "eslint": "3.x",
    "nodemon": "^1.11.0"
  }
}
